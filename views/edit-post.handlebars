<div>
	<a href="/dashboard"> &larr; Back to dashboard</a>
	<div class="form-group row"></div>
	<h2 class="col-lg-12 col-form-label dashboard">Edit Post</h2>
	<form class="col-sm-6 form-layout edit-post-form">
		<div class="form-group row">
			<label for="add-tiltle" class="col-sm-2 col-form-label bg-secondary">Title</label>
			<div class="col-sm-10">
				<input name="edit-title" class="form-control" type="text" value="{{post.title}}" />
			</div>
		</div>
		<div class="form-group row">
			<label for="add-body" class="col-sm-2 col-form-label bg-secondary">body</label>
			<div class="col-sm-10">
				<input name="edit-body" class="form-control" type="text" value="{{post.body}}" />
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-10 d-flex justify-content-space-between">
				<button type="submit" class="save-post-btn btn btn-primary d-flex ">Save post</button>
				<button type="submit" class="delete-post-btn btn btn-primary d-flex ">Delete post</button>
			</div>
		</div>
	</form>
</div>
